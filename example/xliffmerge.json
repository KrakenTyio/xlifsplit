{
  "xliffmergeOptions": {
    "srcDir": "src/locale",
    "genDir": "src/locale",
    "i18nFile": "messages.xlf",
    "i18nFormat": "xlf2",
    "encoding": "UTF-8",
    "beautifyOutput": true,
    "allowIdChange": true,
    "defaultLanguage": "en-GB",
    "useSourceAsTarget": true,
    "targetPraefix": "%%",
    "languages": ["en-GB", "nl-BE", "nl-NL", "fr-BE", "de-DE", "sk-SK"]
  }
}
