{
  "ts-node": {
    "transpileOnly": false,
    "files": true
  },
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext.asynciterable",
      "es2020"
    ],
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "pretty": true,
    "resolveJsonModule": true,
    "declaration": true,
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/ngx-i18nsupport-lib/dist/src",
    ]
  },
  "files": [
    "src/i18n-split.ts"
  ],
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
